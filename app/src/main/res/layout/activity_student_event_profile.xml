<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Activities.StudentEventProfile">

    <RelativeLayout
        android:id="@+id/profile_relative1"
        android:layout_width="match_parent"
        android:background="@drawable/background_login"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/profile_relative_id"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content"
            android:background="@drawable/profile_circle_border">
            <ImageView
                android:id="@+id/student_event_profile_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:adjustViewBounds="true"
                android:layout_margin="12dp"
                android:padding="3dp"
                android:background="@drawable/profile_circle"
                android:scaleType="centerInside" />
        </RelativeLayout>

        <TextView
            android:id="@+id/student_event_profile_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile_relative_id"
            android:layout_centerHorizontal="true"
            android:textSize="20sp"
            android:text="Event Name"
            android:fontFamily="sans-serif-light"
            android:layout_marginTop="5sp"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/student_event_profile_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/student_event_profile_title"
            android:layout_centerHorizontal="true"
            android:textSize="10sp"
            android:text="Bilkent, Ankara"
            android:textAllCaps="true"
            android:fontFamily="sans-serif"
            android:textColor="@color/profileAddress" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/profile_relative1">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/student_event_profile_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginRight="30dp"
                android:orientation="vertical"
                android:layout_marginLeft="30dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-light"
                        android:text="Description:"
                        android:textSize="13sp"
                        android:textColor="@color/profileHeadings"/>

                    <TextView
                        android:id="@+id/student_event_profile_desc"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:fontFamily="sans-serif-light"
                        android:textSize="18sp"
                        android:inputType="textMultiLine"
                        android:textColor="#000000" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-light"
                        android:text="Location:"
                        android:textSize="13sp"
                        android:textColor="@color/profileHeadings"/>

                    <TextView
                        android:id="@+id/student_event_profile_loc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-light"
                        android:textSize="18sp"
                        android:textColor="#000000" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-light"
                        android:text="Date:"
                        android:textSize="13sp"
                        android:textColor="@color/profileHeadings"/>

                    <LinearLayout
                        android:id="@+id/event_date_group"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_below="@id/event_location_field"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/student_event_pick_date"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="Set The Date"
                            android:layout_weight="1"
                            android:ems="10"/>

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </ScrollView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="0dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/student_event_profile_save"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.51"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edit_profile"
                app:layout_constraintVertical_bias="0.0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/button_message_background"
                android:foreground="?android:attr/selectableItemBackground"
                android:text="SAVE"
                android:textColor="#fff"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>